<h1 class="pb-4">Explore Random</h1>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
    <% if (search != " ") { %>
            <a href="/routine/<%= search._id%>" class="col text-center category__link "> 
                <div class="category__img category__img--large shadow">
                    <img src="/uploads/<%= search.image %> " alt="<%= search.name %>">
                </div>
                <div class="pt-1"><%= search.name %></div>
            </a>
    <% } else {%>
        <p>No item is found</p>
    <% } %>
</div>